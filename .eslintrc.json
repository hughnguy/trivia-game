{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
	"globals": {
        "browser": false,
        "sinon": false,
        "require": false,
        "__dirname": false,
        "expect": false,
        "assert": false,
        "module": false,
        "exports": false,
		"process": {
			"env": {
				"NODE_ENV": false
			}
		}
	},
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "arrow-parens": [
            "error",
            "always"
        ],
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": false
            }
        ],
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "object-shorthand": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"space-infix-ops": [
			"error"
		],
        "vars-on-top": [
            "error"
        ]
    }
}